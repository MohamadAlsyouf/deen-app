rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Pillars collection - public read access (static Islamic content)
    match /pillars/{document} {
      allow read: if true;
      allow write: if false; // Only Cloud Functions can write
    }

    // Default rule for other collections (authenticated users only)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}